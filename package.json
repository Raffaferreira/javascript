{
  "name": "java-script-tests",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "Rafael Ferreira",
    "url": "https://github.com/Raffaferreira"
  },
  "description": "Javascript project to test features and libraries for fun and learning",
  "main": "./server/app.js",
  "scripts": {
    "test": "jest",
    "tsc": "tsc",
    "start": "npm run prod",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist-server/bin/www",
    "runall": "npm-run-all clean transpile server",
    "dev": "SET NODE_ENV=development npm-run-all build server",
    "prod": "SET NODE_ENV=production npm-run-all build server",
    "transpile": "babel ./server --out-dir dist-server",
    "clean": "rimraf dist-server",
    "watch:dev": "nodemon",
    "open": "http-server public -a localhost -p 9090 -o",
    "browser": "start http://localhost:9090"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "axios": "^0.27.2",
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.4",
    "express": "^4.18.1",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-plumber": "^1.2.1",
    "gulp-uglify": "^3.0.2",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/gulp": "^4.0.9",
    "@types/gulp-plumber": "^0.0.33",
    "@types/gulp-sass": "^5.0.0",
    "@types/gulp-uglify": "^3.0.7",
    "@types/jest": "^28.1.7",
    "gulp": "^4.0.2",
    "gulp-cssnano": "^2.1.3",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "http-server": "^14.1.1",
    "jest": "^28.1.3",
    "node-sass": "^7.0.1",
    "sass": "^1.54.5",
    "typescript": "^4.7.4"
  }
}
